<form action='/messages'>
<select name="search_by_suburb">
     <% @suburbs.each do |suburb|%>
       <%if suburb == @current_suburb%>
       <option value="<%=suburb%>" selected><%=suburb%></option>
       <%else%>
          <option value="<%=suburb%>"><%=suburb%></option>
       <%end%>
     <%end%>
</select>
<button>Search</button>
</form>

<form action='/messages'>
<select name="search_by_gender">
     <% @genders.each do |gender|%>
       <%if gender == @current_gender%>
       <option value="<%=gender%>" selected><%=gender%></option>
       <%else%>
          <option value="<%=gender%>"><%=gender%></option>
       <%end%>
     <%end%>
</select>
<button>Search</button>
</form>





<a href='/messages'>All</a>


<% @messages.each do |message| %>
  <p>
    <a href="/messages/<%=message.id%>">
      * <%if message.user.gender == "male"%>
      <span>Mr.</span>
      <%elsif message.user.gender == "female"%>
      <span>Miss.</span>
      <%end%>
      <%=message.user.name%> wants to find a home at <strong><%=message.suburb%></strong>, post at <%=message.post_date.localtime.strftime("%d/%m/%Y at %I:%M%p")%>.
    </a>
  </p>
<%end%>

<button><a href="/messages/new">I want to post a new message</a></button>
